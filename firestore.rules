
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow read and write access to any authenticated user for all documents.
    // WARNING: This is NOT secure for production.
    // You should restrict access based on user roles and ownership of data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
